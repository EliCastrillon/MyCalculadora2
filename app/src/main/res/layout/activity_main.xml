<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/screen_background_dark"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.elicastrillon.mycalculadora.MainActivity">

    <TextView
        android:id="@+id/texVResultado"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/eSiete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="7" />

        <Button
            android:id="@+id/eOcho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="8" />

        <Button
            android:id="@+id/eNueve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="9" />

        <Button
            android:id="@+id/eSumar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/eCuatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="4" />

        <Button
            android:id="@+id/eCinco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="5" />

        <Button
            android:id="@+id/eSeis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="6" />

        <Button
            android:id="@+id/eRestar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="-" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/eUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="1" />

        <Button
            android:id="@+id/eDos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="2" />

        <Button
            android:id="@+id/eTres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="3" />

        <Button
            android:id="@+id/eMultiplicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/ePunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="." />

        <Button
            android:id="@+id/eCero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="7"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="0" />

        <Button
            android:id="@+id/eIgual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="=" />

        <Button
            android:id="@+id/eDividir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/eCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/red"
            android:text="Calcular"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/eLimpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/red"
            android:text="Limpiar"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/eSalir"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_margin="12dp"
            android:background="@color/green"
            android:text="Salir"
            android:textColor="@color/black" />
    </LinearLayout>


</LinearLayout>
